echo "Форматирование..."
npm run format

echo "Создание билда Vite-приложения..."
npm run build || exit 1

echo "Добавление билда в git..."
git add -A . || exit 1

echo "Создание коммита с билдом..."
git commit -m "chore: Добавлен билд" || true

echo "Отправка изменений на сервер..."
git push --no-verify
